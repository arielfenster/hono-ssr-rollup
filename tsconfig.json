{
	"include": [
		"shims-vue.d.ts",
		"client-vue/**/*.ts",
		"client-vue/**/*.vue",
		"server/**/*.vue"
	],
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"types": ["node"],
		"jsx": "preserve",
		"jsxImportSource": "vue"
	}
}
